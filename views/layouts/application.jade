    nav
      .wrap
        a.logo(href="/")=app_name
        ul
          li
            a.link(href="/") Home
    block content
    script(type="text/javascript", src="/js/angular.js")
    script(type="text/javascript", src="/js/angular-ui-router.js")
    script(type="text/javascript", src="/js/app.js")
    script(type="text/javascript", src="js/controllers.js")
